<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/more"
        android:textSize="17dip" />

    <View style="@style/main_line_below" />

    <View style="@style/main_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/more_clear_cache"
                style="@style/user_item_linearlayout" >

                <ImageView
                    style="@style/user_item_title_img"
                    android:layout_weight="0"
                    android:src="@drawable/icon_clear_cache_big" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_picture_cache"
                    android:textColor="@color/gray_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_gray_right_default" />
            </LinearLayout>

            <View style="@style/main_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>