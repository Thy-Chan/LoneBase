<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="25dip"
        android:paddingTop="10dip" >

        <ImageButton
            android:id="@+id/more_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:onClick="btnOnClick"
            android:src="@drawable/green_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/more"
            android:textSize="17dip" />
    </FrameLayout>

    <View style="@style/main_line_below" />

    <View style="@style/main_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout style="@style/user_item_linearlayout" >

                <ImageView
                    style="@style/user_item_title_img"
                    android:layout_weight="0"
                    android:src="@drawable/icon_toolbar_scan_history_pressed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/browse_history_title"
                    android:textColor="@color/gray_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_gray_right_default" />
            </LinearLayout>

            <View
                style="@style/main_line"
                android:layout_marginLeft="50dip"
                android:layout_weight="1" />

            <LinearLayout style="@style/user_item_linearlayout" >

                <ImageView
                    style="@style/user_item_title_img"
                    android:layout_weight="0"
                    android:src="@drawable/label_password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/change_password"
                    android:textColor="@color/gray_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_gray_right_default" />
            </LinearLayout>

            <View
                style="@style/main_line"
                android:layout_marginLeft="50dip"
                android:layout_weight="1" />

            <LinearLayout style="@style/user_item_linearlayout" >

                <ImageView
                    style="@style/user_item_title_img"
                    android:layout_weight="0"
                    android:src="@drawable/label_mail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/setting_message"
                    android:textColor="@color/gray_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_gray_right_default" />
            </LinearLayout>

            <View
                style="@style/main_line"
                android:layout_marginLeft="50dip"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/more_clear_cache"
                style="@style/user_item_linearlayout"
                android:onClick="btnOnClick" >

                <ImageView
                    style="@style/user_item_title_img"
                    android:layout_weight="0"
                    android:src="@drawable/icon_clear_cache_big" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_picture_cache"
                    android:textColor="@color/gray_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_gray_right_default" />
            </LinearLayout>

            <View style="@style/main_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>